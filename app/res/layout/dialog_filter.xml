<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:columnCount="4" 
    android:focusable="true"
	android:focusableInTouchMode="true">

    <!-- Sort -->

    <TextView
        android:textStyle="bold"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/search_filter_sort"
        android:textSize="20sp" />

    <Space
        android:layout_columnSpan="3"
        android:layout_gravity="fill" />

    <Spinner
        android:id="@+id/filterSortSpinner"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_width="fill_parent"
        android:layout_gravity="left|top"
        android:layout_row="1" />

    <!-- Category -->

    <TextView
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_row="2"
    	android:textStyle="bold"
        android:text="@string/search_filter_categories"
        android:textSize="20sp" />

    <Space
        android:layout_columnSpan="3"
        android:layout_gravity="fill" />

    <Spinner
        android:id="@+id/filterCategorySpinner"
        android:layout_column="0"
		android:layout_width="fill_parent"
        android:layout_columnSpan="4"
        android:layout_gravity="left|top"
        android:layout_row="3" />

    <!-- Rating -->

    <TextView
        android:layout_column="0"
        android:textStyle="bold"
        android:layout_gravity="left|top"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_row="4"
        android:text="@string/search_filter_rating"
        android:textSize="20sp" />

    <Space
        android:layout_columnSpan="3"
        android:layout_gravity="fill" />

    <Spinner
        android:id="@+id/filterRatingSpinner"
        android:layout_column="0"
        android:layout_width="fill_parent"
        android:layout_columnSpan="4"
        android:layout_gravity="left|top"
        android:layout_row="5" />

    <!-- Condition -->

    <TextView
        android:layout_column="0"
        android:textStyle="bold"
        android:layout_gravity="left|top"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_row="6"
        android:text="@string/search_filter_condition"
        android:textSize="20sp" />

    <Space
        android:layout_columnSpan="3"
        android:layout_gravity="fill" />

    <Spinner
        android:id="@+id/filterConditionSpinner"
        android:layout_column="0"
        android:layout_width="fill_parent"
        android:layout_columnSpan="4"
        android:layout_gravity="left|top"
        android:layout_row="7" />

    <!-- Price -->

    <TextView
        android:textStyle="bold"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_row="8"
        android:text="@string/search_filter_price"
        android:textSize="20sp" />

    <Space
        android:layout_columnSpan="3"
        android:layout_gravity="fill" />

    <EditText
        android:id="@+id/filterStartText"
        android:layout_marginBottom="10dp"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:ems="6"
        android:inputType="numberDecimal"
        android:hint="@string/search_filter_start_hint" >
    </EditText>

    <TextView
        android:layout_column="1"
        android:layout_gravity="left|center_vertical"
        android:text="@string/search_filter_to" />
   
	 <EditText
        android:id="@+id/filterEndText"
        android:hint="@string/search_filter_end_hint"
        android:layout_column="2"
        android:layout_gravity="left|center_vertical"
        android:ems="6"
        android:inputType="numberDecimal" >
    </EditText>
    

</GridLayout>