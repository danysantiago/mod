<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <EditText
        android:id="@+id/txtAddrLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="@string/hint_addrline1" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtAddrLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtAddrLine1"
        android:layout_alignRight="@+id/txtAddrLine1"
        android:layout_below="@+id/txtAddrLine1"
        android:ems="10"
        android:hint="@string/hint_addrline2" />

    <EditText
        android:id="@+id/txtAddrCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtAddrLine2"
        android:layout_below="@+id/txtAddrLine2"
        android:ems="7"
        android:hint="@string/hint_addrcity" />

    <EditText
        android:id="@+id/txtAddrState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtAddrCity"
        android:layout_alignBottom="@+id/txtAddrCity"
        android:layout_alignRight="@+id/txtAddrLine2"
        android:ems="6"
        android:hint="@string/hint_addrstate" />

    <EditText
        android:id="@+id/txtAddrZipcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtAddrCity"
        android:layout_below="@+id/txtAddrCity"
        android:ems="7"
        android:hint="@string/hint_addrzipcode" />

    <Spinner
        android:id="@+id/cboAddrCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtAddrZipcode"
        android:layout_alignTop="@+id/txtAddrZipcode"
        android:layout_toRightOf="@+id/txtAddrZipcode" />

    <CheckBox
        android:id="@+id/chkAddrDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cboAddrCountry"
        android:text="@string/hint_ccdefault" />

</RelativeLayout>
